@model Online_Post_Office_Management_System.Models.Package

@{
    ViewData["Title"] = "Delete Package";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this package?</h3>
<div>
    <h4>Package</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Package ID</dt>
        <dd class="col-sm-10">@Model.PackageId</dd>
        <dt class="col-sm-2">Package Name</dt>
        <dd class="col-sm-10">@Model.PackageName</dd>
        <dt class="col-sm-2">Weight</dt>
        <dd class="col-sm-10">@Model.Weight</dd>
        <dt class="col-sm-2">Dimensions</dt>
        <dd class="col-sm-10">@Model.Dimensions</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PackageId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
