@model Online_Post_Office_Management_System.Models.ChargeOnDistance

@{
    ViewData["Title"] = "Create Charge";
}

<h1>Create Charge</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Distance"></label>
        <input asp-for="Distance" class="form-control" />
        <span asp-validation-for="Distance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ManageCharges" class="btn btn-secondary">Back</a>
</form>
