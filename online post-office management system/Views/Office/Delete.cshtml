@model Online_Post_Office_Management_System.Models.Office

@{
    ViewData["Title"] = "Delete Office";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this office?</h3>
<div>
    <h4>Office</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Office ID</dt>
        <dd class="col-sm-10">@Model.OfficeId</dd>
        <dt class="col-sm-2">Office Name</dt>
        <dd class="col-sm-10">@Model.OfficeName</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="OfficeId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
