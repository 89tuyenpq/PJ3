@model Online_Post_Office_Management_System.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this service?</h3>
<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Service ID</dt>
        <dd class="col-sm-10">@Model.ServiceId</dd>
        <dt class="col-sm-2">Service Name</dt>
        <dd class="col-sm-10">@Model.ServiceName</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ServiceId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
